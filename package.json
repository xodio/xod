{
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "node ./tools/lerna-run-sorted build",
    "clean": "yarn run clean:dist && yarn run clean:node_modules",
    "clean:dist": "rimraf packages/*/dist",
    "clean:node_modules": "rimraf node_modules packages/*/node_modules",
    "dev": "node ./tools/lerna-serve dev",
    "doc": "node ./tools/lerna-run-sorted doc",
    "electron-dist": "node ./tools/lerna-abs-symlinks && cd packages/xod-client-electron && yarn run dist",
    "electron-rebuild": "lerna run --scope xod-client-electron electron-rebuild",
    "lerna": "lerna",
    "lint": "eslint packages/*/src packages/*/test packages/xod-js/platform --ext js,jsx",
    "postinstall": "yarn run bootstrap",
    "start:xod-client-electron": "node ./tools/lerna-run-sorted start xod-client-electron",
    "start:xod-server": "node ./tools/lerna-run-sorted start xod-server",
    "storybook": "node ./tools/lerna-serve storybook xod-client",
    "test": "node ./tools/lerna-run-sorted test",
    "test:watch": "node ./tools/lerna-serve test:watch",
    "verify": "yarn run build && yarn run lint && yarn run test"
  },
